<div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"><b>Complaints</b></h3>
               <div class="col-md-4">
            <%= link_to '+ Add New Complaint', new_complaint_path, :class =>"btn btn-success", :remote => true %>
  
              </div>
             
            </div>
           <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                   
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Complaint By</th>
                            <th>Created_at</th>
                            <th style="align-content: center;">Action</th>
                            <th></th>
                              <th></th>
                          </tr>
                        </thead>
                        
    <tbody>
      <% @complaints.each_with_index do |complaint, i| %>
        <tr id='complaints_ROW_<%= complaint.id %>'>
          <td>
            <span><%= i+1 %></span>
          </td>
          <td>
            <span><%= complaint.user_name %></span>
          </td>
          
          <td>
            <span><%= complaint.created_at.in_time_zone("Asia/Muscat").strftime('%d %B %Y, %H:%M') if complaint.created_at %></span>
          </td>
          <td>
            <%= button_to complaint_path(complaint),:method => :get, :class => "btn-success" do %><i class="fa fa-eye"></i><% end %></td>
            <td><%= button_to edit_complaint_path(complaint), :method => :get, :remote => true, :class => "btn-success" do %><i class="fa fa-edit"></i><% end %></td>
            <td><%= button_to complaint_path(complaint), :method => :delete, :remote => true, data: {confirm: "Are you sure you want to delete this?"}, :class => "btn-success" do %><i class="fa fa-trash"></i><% end %>
           
          </td>
        </tr>
      <% end %>
    </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>

