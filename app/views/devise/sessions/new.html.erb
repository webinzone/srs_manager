<div class="signup-form">
  <h1 style="color: white; padding: 10px;"><b><center> SRS MANAGER </center></b></h1>
  <div class="row">
    <div class="column">
     <%= image_tag("image1.jpeg",'width'=>'400','height'=>'392') %>
    </div>
    <div class="column">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2>Sign In</h2>
        <p>Please fill in this form to SignIn!</p>
        <hr>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <span class="fa fa-user"></span>
              </span>                    
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"Email", :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-lock"></i>
              </span>                    
            </div>
            <%= f.password_field :password, autocomplete: "current-password" ,placeholder:"Password", :class => "form-control" %>
          </div>
        </div>         
        <div class="form-group">
          <center>
            <%= f.submit "Log in" , :class => "btn btn-primary btn-lg"  %><br>
            <%= render "devise/shared/links" %>
          </center>
        </div>
      <% end %>
    </div>
  </div>
</div>



