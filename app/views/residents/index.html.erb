<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title"><b>Resident Records</b></h3>
        <div class="col-md-4">
          <%= link_to '+ Add New Resident Record', new_resident_path, :class =>"btn btn-success", :remote => true %>
        </div>
      </div>
      <div class="row">
        <div class="col-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead style="background-color: #1294a3; color: white;">
                    <tr>
                      <th>ID</th>
                      <th>User</th>
                      <th>Created_at</th>
                      <th style="align-content: center;">Action</th>
                      <th></th>
                        <th></th>
                    </tr>
                  </thead>
      
                  <tbody >
                    <% @residents.each_with_index do |resident, i| %>
                      <tr id='residents_ROW_<%= resident.id %>'>
                        <td>
                          <span><%= i+1 %></span>
                        </td>
                        <td>
                          <span><%= resident.surname %></span>
                        </td>
                        
                        <td>
                          <span><%= resident.created_at.in_time_zone("Asia/Muscat").strftime('%d %B %Y, %H:%M') if resident.created_at %></span>
                        </td>
                        <td>
                          <%= button_to resident_path(resident),:method => :get, :class => "btn-success" do %><i class="fa fa-eye"></i><% end %>
                        </td>
                        <td><%= button_to edit_resident_path(resident), :method => :get, :remote => true, :class => "btn-success" do %><i class="fa fa-edit"></i><% end %>
                        </td>
                        <td><%= button_to resident_path(resident), :method => :delete, :remote => true, data: {confirm: "Are you sure you want to delete this?"}, :class => "btn-danger" do %><i class="fa fa-trash"></i><% end %>     </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>



        