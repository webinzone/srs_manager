<div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"><b>Support Plans</b></h3>
               <div class="col-md-4">
            <%= link_to '+ Add New Support Plan', new_support_plan_path, :class =>"btn btn-success", :remote => true %>
  
              </div>
             
            </div>
           <div class="row">
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                   
                    <div class="table-responsive">
                      <table class="table" style="border-color: black;border: 1px;">
                        <thead style="background-color: #1294a3;color: white;">
                          <tr>
                            <th>#</th>
                            <th>support_plans By</th>
                            <th>Created_at</th>
                            <th style="align-content: center;">Action</th>
                            <th></th>
                            <th></th>
                          </tr>
                        </thead>
                        
    <tbody>
      <% @support_plans.each_with_index do |support_plan, i| %>
        <tr id='support_plans_ROW_<%= support_plan.id %>'>
          <td>
            <span><%= i+1 %></span>
          </td>
          <td>
            <span><%= support_plan.user_name %></span>
          </td>
          
          <td>
            <span><%= support_plan.created_at.in_time_zone("Asia/Muscat").strftime('%d %B %Y, %H:%M') if support_plan.created_at %></span>
          </td>
          <td>
            <%= button_to support_plan_path(support_plan),:method => :get, :class => "btn-success" do %><i class="fa fa-eye"></i><% end %></td>
            <td><%= button_to edit_support_plan_path(support_plan), :method => :get, :remote => true, :class => "btn-success" do %><i class="fa fa-edit"></i><% end %></td>
            <td><%= button_to support_plan_path(support_plan), :method => :delete, :remote => true, data: {confirm: "Are you sure you want to delete this?"}, :class => "btn-success" do %><i class="fa fa-trash"></i><% end %>
           
          </td>
        </tr>
      <% end %>
    </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>


