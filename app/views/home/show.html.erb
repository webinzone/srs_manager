<div class="main-panel">
	<div class="content-wrapper">
	  <div class="page-header">
	    <h3 class="page-title"><b>My Profile</b></h3>
	   
	  </div>
	  <div class="row">
	  	<div class="col-12 grid-margin stretch-card">

		<div class="card">
                  <div class="card-body">
                    <p class="card-description">Update Profile</p>
            <%= form_with( remote: true , class: "forms-sample", url: users_home_index_path(current_user), method: :put) do |f| %>
                      <div class="form-group">
                        <label for="exampleInputname">Name</label>
                     <%= f.text_field :name, autofocus: true, autocomplete: "user", :class => "form-control", value:@user.name %>                      
                      </div>
                       <div class="form-group">
                        <label for="exampleaddress">Email Address</label>
                        <%= f.text_field :email, autofocus: true, autocomplete: "Email", :class => "form-control", value:@user.email %>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputtelephone">Password</label>
                        <input type="text" class="form-control" id="exampleInputtelephone" value="<%= @user.password %>" />
                      </div>
											<button type="submit" class="btn btn-primary mr-2"> Update </button>
                      <button class="btn btn-light">Cancel</button>                      
<% end %>                     </div>
                </div>
              </div>
            </div>
          </div>
          </div>
          